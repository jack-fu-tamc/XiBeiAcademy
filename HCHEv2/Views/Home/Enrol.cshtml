@using HC.Data.ViewModels
@model libraryIndexModel
@{
    ViewBag.Title = "西北大学软件职业学院-学院招生";
    Layout = "~/Views/Shared/_LayoutEnrol.cshtml";
}
@section headCSS{
<link href="~/Content/student_home.css" rel="stylesheet" type="text/css" />
}
@section headScript{
   <script src="~/Scripts/jquery-1.7.2.min.js"></script>
<script src="~/Scripts/recruitStudent.js"></script>
}


 <!--正文-->
<div class="home-bg">
    <!--焦点图start-->
    <div class="out">
        <ul class="img">
            <li><a href="#"><img src="images/college/focus-img1.jpg" alt=""></a></li>
            <li><a href="#"><img src="images/college/focus-img1.jpg" alt=""></a></li>
            <li><a href="#"><img src="images/college/focus-img1.jpg" alt=""></a></li>
            @*<li><a href="#"><img src="images/college/view-bg.jpg" alt=""></a></li>*@
        </ul>
        <ul class="num"></ul>
        <div class="left btn"><</div>
        <div class="right btn">></div>
    </div>
    <!--焦点图end-->

<!--通知公告start-->
<div class="notices-bulle">
    <div class="container-fluid">
        <!--左侧-->
        <div class="left-notice">
            <div class="notice-title">
                <em>通知公告</em>
                <a href="/Information/SectionEnrol/3088">+&nbsp;更多</a>
            </div>
            @if (ViewBag.tzggLast != null)
               {
                   var tzggLast = ViewBag.tzggLast as HC.Data.Models.News;
                   var finallText = System.Text.RegularExpressions.Regex.Replace(System.Text.RegularExpressions.Regex.Replace(HttpUtility.HtmlDecode(tzggLast.NewsContent), "<[^>]+>", ""), "&[^;]+;", "");

                   if (finallText.Length > 111)
                   {
                       finallText = finallText.Substring(0, 100);
                   }
            <div class="nodice-details">
                <span class="left-details">
                    <img src="@tzggLast.PicURL" alt="p" />
                </span>
                <span class="right-details">
                   
                       
                        
                        <p class="details-titeles">
                            @tzggLast.NewsTitle
                        </p>
    <p>
        <a href="/Information/EnrolNews/@tzggLast.NewsID">
            @finallText >>
        </a>
    </p>
                   
                    
                </span>
                <div class="clear"></div>
            </div>
            }
            <div class="clauses">

                @if (ViewBag.tzgg != null)
                {
                    var tzgg = ViewBag.tzgg as List<HC.Data.Models.News>;
                    var k=1;
                    var className="";
                    foreach (var nes in tzgg)
                    {
                        if (k % 2 == 0)
                        {
                            className = "right-clauses";
                        }
                        else
                        {
                            className = "left-clauses";
                        }
                        
                        <span class="@className">
                            <em><img src="~/images/recruit/big.png" alt="..." /></em>
                            @nes.NewsTitle
                        </span>
                        k++;
                    }

                }                               
                <div class="clear"></div>
            </div>
            <div class="time-inform">
                <img src="~/images/college/message.gif" alt="" />
                <div class="message-shower">
                    <ul class="message-list">

                        @if (ViewBag.rollNews != null)
                        {
                            var rollNews = ViewBag.rollNews as List<HC.Data.Models.News>;
                            foreach (var ne in rollNews)
                            {
                                <li>@ne.NewsTitle</li>
                            }
                        }
                    </ul>
                    <ul class="slide-list">
                        @*<li><a href=""><img src="~/images/recruit/big.png" alt="" /></a></li>
                        <li><a href=""><img src="~/images/recruit/big.png" alt="" /></a></li>
                        <li><a href=""><img src="~/images/recruit/big.png" alt="" /></a></li>*@
                    </ul>
                </div>
                <div class="clear"></div>
            </div>
        </div>
        <!--右侧-->
        <div class="right-notice">
            <a href="">
                <img src="~/images/college/plan1.jpg" alt="" /> <a href="">
                    <img src="~/images/college/plan2.jpg" alt="" />
                </a>
            </a>
        </div>
        <div class="clear"></div>
        <!--下侧-->
        <div class="downside">
            <ul>
                <li class="first-tab">
                    <div class="downsideTitle01">招生时间表</div>
                    <div class="downsidePic01"></div>
                </li>
                <li>
                    <div class="downsideTitle02">报考必读</div>
                    <div class="downsidePic02">
                        <div class="details-text">
                            @if (ViewBag.bkbd != null)
                            {
                                var bkbd = ViewBag.bkbd as List<HC.Data.Models.News>;
                                foreach (var newss in bkbd)
                                {
                                    <p><a href="/Information/EnrolNews/@newss.NewsID" style="padding:0;">@newss.NewsTitle</a></p>
                                }
                            }                                                       
                        </div>
                    </div>
                </li>
                <li>
                    <div class="downsideTitle03">常见问题<span>近期热点问题</span></div>
                    <div class="downsidePic03">
                        <div class="details-text" style="padding-top: 30px">
                            <p><a href="">自主招生</a> | <a href="">保送生</a></p>
                            <p><a href="">港澳台侨</a> |<a href="">普通高考</a></p>
                        </div>
                    </div>
                </li>
            </ul>
            <div class="clear"></div>
        </div>

        </div>
    </div>
    <!--通知公告end-->
    <!--导航菜单-->
   @Html.Partial("HeadNavEnrol")
    <!--可变内容start-->

</div>
<!--底部start-->