                //隐藏编辑器，因为不会用到这个编辑器实例，所以要隐藏
                albumPCoverUe.hide();
                //        //侦听图片上传   原来单页相册使用
                //        albumPCoverUe.addListener('beforeinsertimage', function (t, arg) {
                //            var sbStr = "";
                //            var i = 0;
                //            for (var a in arg) {
                //                sbStr += "<div style=\"display:inline-block; position:relative;\">" +
                // "<img  src=\"" + arg[a].src + "\" style=\"height: 150px;width: 150px; display:block;\" />" +
