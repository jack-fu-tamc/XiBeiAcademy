    //属性设置数据读取
    function propertySet() {
        if (selectedIds.length == 0) {
            errorTipe("请选择要操作的新闻！");
            return false;
        }
        if (selectedIds.length > 1) {
            errorTipe("不支持批量操作！");
            return false;
        }


        $.ajax({
            url: "/manage/News/_getNewsProperty/" + selectedIds[0],
            type: 'GET',
            dataType: 'json',
            error: function (xhr, status) {
                errorTipe("通信失败");
            },
            success: function (Data) {
                showArtdialog(Data);
            }
        });
