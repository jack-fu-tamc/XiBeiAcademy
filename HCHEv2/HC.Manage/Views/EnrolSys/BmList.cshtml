    //属性设置 对话框
    function showArtdialog(e) {
        console.log(e);
        var strSb = "<div class='propertySet'>";
        if (e.isHot) {
            strSb += '<input type="checkbox" id="isHotInput" value="2" checked="checked"  /><span>热点</span>';
        } else {
            strSb += '<input type="checkbox" id="isHotInput" value="2"  /><span>热点</span>';
        }


